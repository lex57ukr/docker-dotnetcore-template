{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "env-build",
            "command": "docker-compose",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "env-up",
            "command": "docker-compose",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "up",
                "--detach"
            ],
            "problemMatcher": []
        },
        {
            "label": "env-stop",
            "command": "docker-compose",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "kill"
            ],
            "problemMatcher": []
        },
        {
            "label": "env-clean",
            "command": "docker-compose",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "down"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "docker-compose",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "exec",
                "app",
                "dotnet",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "docker-compose",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "exec",
                "app",
                "dotnet",
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "test",
            "command": "docker-compose",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "exec",
                "app",
                "dotnet",
                "test",
                "--filter",
                "category!=integration",
                "App.Tests/App.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-integration",
            "command": "docker-compose",
            "group": "test",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "exec",
                "app",
                "dotnet",
                "test",
                "--filter",
                "category=integration",
                "App.Tests/App.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-everything",
            "command": "docker-compose",
            "group": "test",
            "args": [
                "--file",
                "docker-compose.debug.yml",
                "exec",
                "app",
                "dotnet",
                "test",
                "App.Tests/App.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "local-restore",
            "command": "dotnet",
            "args": [
                "restore"
            ],
            "problemMatcher": []
        },
        {
            "label": "local-clean",
            "command": "dotnet",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "local-build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "local-test",
            "command": "dotnet",
            "group": "test",
            "args": [
                "test",
                "--filter",
                "category!=integration",
                "App.Tests/App.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}
